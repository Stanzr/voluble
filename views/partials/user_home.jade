ul.navigation
  -if(undefined === session.user)
    li.lo
      a#login(href='/auth/facebook') Log in(fb)
      a#login(href='/auth/twitter') Log in (tw)
        li
          a#register(href='/register') Sign up

  -else
    li.welcome_top
      a(href='/profile')
        img(src='#{session.user.profile_pic_url}', alt='#{session.user.name}')
        | Welcome,
        strong #{session.user.name}
    li
      a(href='/history') History
    li
      a(href='/settings') Settings
    li
      a(href='/logout') Log out